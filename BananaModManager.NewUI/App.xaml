<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="BananaModManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BananaModManager.NewUI"
    xmlns:ui="using:Windows.UI"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ui:Color x:Key="SystemAccentColorDark1">#E5AB00</ui:Color>
            <ui:Color x:Key="SystemAccentColorDark2">#E5AB00</ui:Color>
            <ui:Color x:Key="SystemAccentColorDark3">#E5AB00</ui:Color>
            <ui:Color x:Key="SystemAccentColorLight1">#FFDB00</ui:Color>
            <ui:Color x:Key="SystemAccentColorLight2">#FFDB00</ui:Color>
            <ui:Color x:Key="SystemAccentColorLight3">#FFDB00</ui:Color>

            <Style TargetType="toolkit:SettingsCard" x:Key="SettingsCardStyle">
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
            <Style TargetType="toolkit:SettingsExpander" x:Key="SettingsExpanderStyle">
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
